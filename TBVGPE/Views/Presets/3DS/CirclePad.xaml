<UserControl x:Class="TBVGPE.Views.Presets._3DS.CirclePad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets._3DS"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="180"
             Background="Transparent">
    <Canvas x:Name="PadCanvas" SizeChanged="PadCanvas_SizeChanged">
        <Ellipse Width="180" Height="180"
                 Fill="#333"
                 Opacity="0.5" />

        <Ellipse x:Name="Thumb"
                 Width="120" Height="120"
                 Fill="#AAA"
                 TouchDown="Thumb_TouchDown"
                 TouchMove="Thumb_TouchMove"
                 TouchUp="Thumb_TouchUp"/>
    </Canvas>
</UserControl>

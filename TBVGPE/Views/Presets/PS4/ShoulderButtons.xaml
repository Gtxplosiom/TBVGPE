<UserControl x:Class="TBVGPE.Views.Presets.PS4.ShoulderButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets.PS4"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="800">
    <Grid>
        <!-- TODO: Integrate stack panels -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="L1Btn"
                Tag="L1"
                Width="100" Height="30"
                Content="L1"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Grid.Column="0"
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="L2Btn"
                Tag="L2"
                Width="100" Height="30"
                Content="L2"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Grid.Column="0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10,50,0,0"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="R1Btn"
                Tag="R1"
                Width="100" Height="30"
                Content="R1"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Grid.Column="1"
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="R2Btn"
                Tag="R2"
                Width="100" Height="30"
                Content="R2"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Grid.Column="1"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,50,10,0"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>
    </Grid>
</UserControl>

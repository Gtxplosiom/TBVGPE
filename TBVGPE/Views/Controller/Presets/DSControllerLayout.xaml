<UserControl x:Class="TBVGPE.Views.Presets.DSControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets"
             xmlns:DirectionalButtons="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             xmlns:FaceButtons="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             xmlns:ShoulderButtons="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             xmlns:UtilityButtons="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ShoulderButtons:StandardShoulderButtons x:Name="StandardShoulderButtonsControl"
                                      Height="Auto"
                                      HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <FaceButtons:NintendoNewFaceButtons x:Name="NintendoNewFaceButtonsControl"
                          Width="200" Height="200"
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Grid.Row="0"
                          Margin="50" />

                <UtilityButtons:DSUtilityButtons x:Name="DSUtililityButtonsControl"
                             Width="70" Height="100"
                             HorizontalAlignment="Right" VerticalAlignment="Bottom"
                             Grid.Row="1"
                             Margin="10,10,115,30" />
            </Grid>

            <DirectionalButtons:StandardDirectionalButtons x:Name="StandardDirectionalButtonsControl"
                                         Width="180" Height="180"
                                         HorizontalAlignment="Left" VerticalAlignment="Top"
                                         Grid.Column="0"
                                         Margin="50" />
        </Grid>
    </Grid>
</UserControl>

<Window x:Class="TBVGPE.Views.MenuBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TBVGPE.Views"
        mc:Ignorable="d"
        Title="MenuBar" 
        Height="30"
        WindowStartupLocation="Manual"
        Left="0" Top="0"
        Visibility="{Binding VisibilityState}"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True">
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label Content="Choose a Controller:" 
               Width="Auto" Height="30"
               VerticalAlignment="Center" 
               HorizontalAlignment="Left"
               Foreground="White" Background="#AAA"
               FontSize="14" 
               BorderBrush="#555"
               BorderThickness="1"
               Grid.Column="0"/>

        <ComboBox ItemsSource="{Binding VirtualGamePadsCollection}" 
                  DisplayMemberPath="Name" 
                  SelectedValuePath="Id"
                  SelectedItem="{Binding SelectedVirtualGamePad, Mode=TwoWay}"
                  Height="30"
                  BorderThickness="1"
                  Grid.Column="1"/>

        <Button Content="&lt;+ Add Custom Layout"
                Width="Auto" Height="30"
                Foreground="White" Background="#999"
                FontSize="14"
                BorderBrush="#555"
                BorderThickness="1"
                Command="{Binding OpenCustomLayoutCreatorCommand}"
                Grid.Column="2" />

        <Button Content="Update TBVGPE"
                Width="Auto" Height="30"
                Foreground="White" Background="#BBB"
                FontSize="14"
                BorderBrush="#555"
                BorderThickness="1"
                Command="{Binding OpenUpdaterCommand}"
                Grid.Column="3" />
    </Grid>
</Window>

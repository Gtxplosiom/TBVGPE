<UserControl x:Class="TBVGPE.Views.Controller.Components.UtilityButtons.DSUtilityButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="70">
    <Canvas Name="PadCanvas">
        <!-- Anti click through -->
        <Rectangle Width="70" Height="100" Fill="#01000000" />

        <!-- TODO: Put in stack panel -->
        <Rectangle x:Name="StartBtn"
                   Tag="Start"
                   Width="50" Height="30"
                   Fill="#AAA"
                   Margin="10"/>
        <Label Content="Start"
               Width="50" Height="30"
               Grid.Column="0"
               Margin="10"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="10" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>

        <Rectangle x:Name="SelectBtn"
                   Tag="Select"
                   Width="50" Height="30"
                   Fill="#AAA"
                   Canvas.Top="50"
                   Margin="10"/>
        <Label Content="Select"
               Width="50" Height="30"
               Grid.Column="0"
               Margin="10"
               Canvas.Top="50"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="10" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>
    </Canvas>
</UserControl>

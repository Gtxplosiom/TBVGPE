<UserControl x:Class="TBVGPE.Views.Controller.Components.DirectionalButtons.StandardDirectionalButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="180">

    <Canvas Name="PadCanvas">
        <Button x:Name="UpBtn"
                Tag="Up"
                Width="60" Height="60"
                Background="#AAA"
                BorderThickness="0"
                Canvas.Left="60"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"/>

        <Button x:Name="LeftBtn"
                Tag="Left"
                Width="60" Height="60"
                Background="#AAA"
                BorderThickness="0"
                Canvas.Top="60"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"/>

        <Button x:Name="DownBtn"
                Tag="Down"
                Width="60" Height="60"
                Background="#AAA"
                BorderThickness="0"
                Canvas.Left="60" Canvas.Top="120"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"/>

        <Button x:Name="RightBtn"
                Tag="Right"
                Width="60" Height="60"
                Background="#AAA"
                BorderThickness="0"
                Canvas.Left="120" Canvas.Top="60"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"/>

        <!-- Fillers -->
        <Rectangle Width="60" Height="60"
                   Fill="#AAA"
                   Canvas.Left="60" Canvas.Top="60"
                   IsHitTestVisible="False"/>

        <!-- Diagonals -->
        <Button x:Name="UpLeftBtn"
                Tag="UpLeft"
                Width="60" Height="60"
                Background="#333"
                BorderThickness="0"
                Opacity="0.3"
                Canvas.Left="0" Canvas.Top="0"
                PreviewTouchDown="DiagButton_PreviewTouchDown"
                PreviewTouchUp="DiagButton_PreviewTouchUp"
                TouchLeave="DiagButton_TouchLeave"
                TouchEnter="DiagButton_TouchEnter"/>

        <Button x:Name="UpRightBtn"
                Tag="UpRight"
                Width="60" Height="60"
                Background="#333"
                BorderThickness="0"
                Opacity="0.3"
                Canvas.Left="120" Canvas.Top="0"
                PreviewTouchDown="DiagButton_PreviewTouchDown"
                PreviewTouchUp="DiagButton_PreviewTouchUp"
                TouchLeave="DiagButton_TouchLeave"
                TouchEnter="DiagButton_TouchEnter"/>

        <Button x:Name="DownLeftBtn"
                Tag="DownLeft"
                Width="60" Height="60"
                Background="#333"
                BorderThickness="0"
                Opacity="0.3"
                Canvas.Left="0" Canvas.Top="120"
                PreviewTouchDown="DiagButton_PreviewTouchDown"
                PreviewTouchUp="DiagButton_PreviewTouchUp"
                TouchLeave="DiagButton_TouchLeave"
                TouchEnter="DiagButton_TouchEnter"/>

        <Button x:Name="DownRightBtn"
                Tag="DownRight"
                Width="60" Height="60"
                Background="#333"
                BorderThickness="0"
                Opacity="0.3"
                Canvas.Left="120" Canvas.Top="120"
                PreviewTouchDown="DiagButton_PreviewTouchDown"
                PreviewTouchUp="DiagButton_PreviewTouchUp"
                TouchLeave="DiagButton_TouchLeave"
                TouchEnter="DiagButton_TouchEnter"/>
    </Canvas>
</UserControl>

<UserControl x:Class="TBVGPE.Views.Controller.Components.UtilityButtons.SwitchUtilityButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Canvas Name="PadCanvas">
        <!-- Anti click through -->
        <Rectangle Width="200" Height="50" Fill="#01000000" />
        
        <!-- TODO: Put in stack panel -->
        <Rectangle x:Name="PlusBtn"
                   Tag="Plus"
                   Width="50" Height="30"
                   Fill="#AAA"
                   Canvas.Left="130"
                   Margin="10"/>
        <Label Content="+"
               Width="50" Height="30"
               Grid.Column="0"
               Margin="10"
               Canvas.Left="130"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="15" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>

        <Rectangle x:Name="MinusBtn"
                   Tag="Minus"
                   Width="50" Height="30"
                   Fill="#AAA"
                   Margin="10"/>
        <Label Content="-"
               Width="50" Height="30"
               Grid.Column="0"
               Margin="10"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="15" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>

        <Rectangle x:Name="HomeBtn"
                   Tag="Home"
                   Width="50" Height="30"
                   Fill="#AAA"
                   Canvas.Left="65"
                   Margin="10"/>
        <Label Content="Home"
               Width="50" Height="30"
               Grid.Column="0"
               Margin="10"
               Canvas.Left="65"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="10" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>
    </Canvas>
</UserControl>

<UserControl x:Class="TBVGPE.Views.Controller.Components.FaceButtons.GBAFaceButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             mc:Ignorable="d" 
             d:DesignHeight="135" d:DesignWidth="135">
    <Canvas Name="PadCanvas">
        <!-- Anti click through -->
        <Rectangle Width="135" Height="135" RadiusX="35" RadiusY="35" Fill="#EEEE" Opacity="0.1" />

        <Ellipse x:Name="APlusBBtn" Width="70" Height="70" Fill="#333" Opacity="0.0" Canvas.Left="33" Canvas.Top="33" />
        <Label x:Name="APlusBTxt"
               Content="A+B"
               Width="70" Height="70"
               Canvas.Left="33" Canvas.Top="33"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="24" FontWeight="Bold"
               Opacity="0.0"
               Foreground="White"
               Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="BBtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Left="0" Canvas.Top="65" />
        <Label Content="B"
               Width="70" Height="70"
               Canvas.Left="0" Canvas.Top="65"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="24" FontWeight="Bold"
               Foreground="White"
               Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="ABtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Left="65" Canvas.Top="0" />
        <Label Content="A"
               Width="70" Height="70"
               Canvas.Left="65" Canvas.Top="0"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="24" FontWeight="Bold"
               Foreground="White"
               Background="Transparent"
               IsHitTestVisible="False"/>
    </Canvas>
</UserControl>

<UserControl x:Class="TBVGPE.Views.Presets.SwitchControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:AnalogSticks="clr-namespace:TBVGPE.Views.Controller.Components.AnalogSticks"
             xmlns:DirectionalButtons="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             xmlns:FaceButtons="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             xmlns:ShoulderButtons="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             xmlns:AnalogStickButtons="clr-namespace:TBVGPE.Views.Controller.Components.AnalogStickButtons"
             xmlns:UtilityButtons="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ShoulderButtons:NintendoShoulderButtons x:Name="NintendoShoulderButtonsControl"
                                          HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Grid Grid.Row="1">
            <AnalogStickButtons:StandardAnalogStickButtons x:Name="StandardAnalogStickButtonsControl"
                                           HorizontalAlignment="Center" VerticalAlignment="Top" />
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DirectionalButtons:SwitchDirectionalButtons x:Name="SwitchDirectionalButtonsControl"
                                                             Width="150" Height="150"
                                                             HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                                             Grid.Row="1"
                                                             Margin="150,0,0,40" />

                <AnalogSticks:LeftAnalogStick x:Name="LeftAnalogStickControl"
                                              Width="180" Height="180"
                                              HorizontalAlignment="Left" VerticalAlignment="Top"
                                              Grid.Row="0"
                                              Margin="50,20,20,20" />
            </Grid>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <FaceButtons:NintendoNewFaceButtons x:Name="NintendoNewFaceButtonsControl"
                                                        Width="200" Height="200"
                                                        HorizontalAlignment="Right" VerticalAlignment="Center"
                                                        Grid.Column="1"
                                                        Margin="0,10,10,130" />
                    <UtilityButtons:SwitchUtilityButtons x:Name="SwitchUtilityButtonsControl"
                                                         Width="200" Height="50"
                                                         HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                         Grid.Row="1"
                                                         Margin="0,0,0,40" />
                </Grid>

                <AnalogSticks:RightAnalogStick x:Name="RightAnalogStickControl"
                               Width="180" Height="180"
                               HorizontalAlignment="Right" VerticalAlignment="Bottom"
                               Grid.Column="0"
                               Margin="0,0,0,40" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>

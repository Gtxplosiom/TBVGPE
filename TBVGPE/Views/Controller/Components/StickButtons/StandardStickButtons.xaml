<UserControl x:Class="TBVGPE.Views.Controller.Components.StickButtons.StandardStickButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Components.StickButtons"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500">
    <Grid>
        <!-- TODO: Integrate stack panels -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="LStickBtn"
                Tag="LeftStick"
                Width="100" Height="30"
                Content="&gt;LS&lt;"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Grid.Column="0"
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="RStickBtn"
                Tag="RightStick"
                Width="100" Height="30"
                Content="&gt;RS&lt;"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Grid.Column="1"
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>
    </Grid>
</UserControl>

<UserControl x:Class="TBVGPE.Views.Presets._3DS.DirectionalPad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets._3DS"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <!-- TODO: experiment with this later on, to remove that blue highlight bullc**p -->
    <UserControl.Resources>
        <Style x:Key="FlatButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="Background" Value="#AAA"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkGray"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>


    <Canvas Name="PadCanvas">
        <!-- an FocusVisualStyle="{x:Null}" napa tanggal han blue na highlight kun na interact ha buttons -->
        <Button x:Name="UpBtn"
                Tag="UP"
                Width="50" Height="50"
                Background="#AAA"
                Canvas.Left="50"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="LeftBtn"
                Tag="LEFT"
                Width="50" Height="50"
                Background="#AAA"
                Canvas.Top="50"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="DownBtn"
                Tag="DOWN"
                Width="50" Height="50"
                Background="#AAA"
                Canvas.Left="50" Canvas.Top="100"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="RightBtn"
                Tag="RIGHT"
                Width="50" Height="50"
                Background="#AAA"
                Canvas.Left="100" Canvas.Top="50"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>

        <!-- Filler la ini -->
        <Rectangle Width="50" Height="50"
                   Fill="#AAA"
                   Canvas.Left="50" Canvas.Top="50"
                   IsHitTestVisible="False"/>

        <Border x:Name="FocusResetTarget" Focusable="True" Visibility="Collapsed"/>
    </Canvas>
</UserControl>

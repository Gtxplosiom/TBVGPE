<UserControl x:Class="TBVGPE.Views.Presets.PS4ControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets"
             xmlns:AnalogSticks="clr-namespace:TBVGPE.Views.Controller.Components.AnalogSticks"
             xmlns:DirectionalButtons="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             xmlns:FaceButtons="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             xmlns:ShoulderButtons="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             xmlns:AnalogStickButtons="clr-namespace:TBVGPE.Views.Controller.Components.AnalogStickButtons"
             xmlns:UtilityButtons="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ShoulderButtons:PlayStationShoulderButtons x:Name="PlayStationShoulderButtonsControl"
                                                    Height="Auto"
                                                    HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Grid Grid.Row="1">
            <AnalogStickButtons:StandardAnalogStickButtons x:Name="StandardAnalogStickButtonsControl"
                                                           Height="Auto"
                                                           HorizontalAlignment="Center" VerticalAlignment="Top" />
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <DirectionalButtons:StandardDirectionalButtons x:Name="StandardDirectionalButtonsControl"
                                                               Width="180" Height="180"
                                                               HorizontalAlignment="Left" VerticalAlignment="Top"
                                                               Grid.Row="0"
                                                               Margin="20" />

                <AnalogSticks:LeftAnalogStick x:Name="LeftAnalogStickControl"
                                              Width="180" Height="180"
                                              HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                              Grid.Row="1"
                                              Margin="170,0,0,40" />
            </Grid>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <FaceButtons:PlayStationFaceButtons x:Name="PlayStationFaceButtonsControl"
                                                        Width="200" Height="200"
                                                        HorizontalAlignment="Right" VerticalAlignment="Center"
                                                        Grid.Column="1"
                                                        Margin="0,10,10,130" />

                    <UtilityButtons:PS4UtilityButtons x:Name="PS4UtilityButtonsControl"
                                                      Width="200" Height="50"
                                                      HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                      Grid.Column="1"
                                                      Margin="10" />
                </Grid>

                <AnalogSticks:RightAnalogStick x:Name="RightAnalogStickControl"
                                               Width="180" Height="180"
                                               HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                               Margin="0,0,0,40" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>

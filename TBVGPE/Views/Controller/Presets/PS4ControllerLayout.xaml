<UserControl x:Class="TBVGPE.Views.Controller.Presets.PS4ControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Presets"
             xmlns:viewModel="clr-namespace:TBVGPE.ViewModels.Controllers"
             xmlns:AnalogSticks="clr-namespace:TBVGPE.Views.Controller.Components.AnalogSticks"
             xmlns:DirectionalButtons="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             xmlns:FaceButtons="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             xmlns:ShoulderButtons="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             xmlns:AnalogStickButtons="clr-namespace:TBVGPE.Views.Controller.Components.AnalogStickButtons"
             xmlns:UtilityButtons="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Canvas x:Name="LayoutCanvas" Width="{Binding LayoutCanvasWidth}" Height="600">
        <!-- Be sure to take into account the codebehinds loaded event whe setting the shoulder and analig stick buttons' dimentions(widths, heights) or positions -->
        <!-- if you want to migrate the logiv here -->
        <!-- TODO: consider dividing each shoulder buttons individually nala kaysa an naka grupo na ngadaan pareho adi yana -->
        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding ShoulderButtonsX}" Canvas.Top="{Binding ShoulderButtonsY}">
            <ShoulderButtons:PlayStationShoulderButtons x:Name="PlayStationShoulderButtonsControl"
                                                        Height="120" />
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding AnalogStickButtonsX}" Canvas.Top="{Binding AnalogStickButtonsY}">
            <AnalogStickButtons:StandardAnalogStickButtons x:Name="StandardAnalogStickButtonsControl"
                                                           Height="70" />
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding DirectionalButtonsX}" Canvas.Top="{Binding DirectionalButtonsY}">
            <DirectionalButtons:StandardDirectionalButtons x:Name="StandardDirectionalButtonsControl"
                                                           Width="180" Height="180"/>
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding LeftAnalogStickX}" Canvas.Top="{Binding LeftAnalogStickY}">
            <AnalogSticks:LeftAnalogStick x:Name="LeftAnalogStickControl"
                                          Width="180" Height="180"/>
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding FaceButtonsX}" Canvas.Top="{Binding FaceButtonsY}">
            <FaceButtons:PlayStationFaceButtons x:Name="PlayStationFaceButtonsControl"
                                                Width="200" Height="200"/>
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding UtilityButtonsX}" Canvas.Top="{Binding UtilityButtonsY}">
            <UtilityButtons:PS4UtilityButtons x:Name="PS4UtilityButtonsControl"
                                              Width="200" Height="50"/>
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding RightAnalogStickX}" Canvas.Top="{Binding RightAnalogStickY}">
            <AnalogSticks:RightAnalogStick x:Name="RightAnalogStickControl"
                                           Width="180" Height="180"/>
        </viewModel:ControllerWrapperViewModel>
    </Canvas>
</UserControl>

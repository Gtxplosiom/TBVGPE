<UserControl x:Class="TBVGPE.Views.Presets._3DSControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:_3DSComponents="clr-namespace:TBVGPE.Views.Presets._3DS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <!-- refer ha margins para dynamic positions han each controls -->
        <_3DSComponents:ShoulderButtons x:Name="ShoulderButtonsControl"
                                        Height="90"
                                        HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <_3DSComponents:CirclePad x:Name="CirclePadControl"
                                      Width="180" Height="180"
                                      HorizontalAlignment="Left" VerticalAlignment="Center"
                                      Grid.Column="0"
                                      Margin="50,0,0,160" />

            <_3DSComponents:DirectionalPad x:Name="DirectionalPadControl"
                                           Width="150" Height="150"
                                           HorizontalAlignment="Left" VerticalAlignment="Center"
                                           Grid.Column="0"
                                           Margin="65,200,0,0" />

            <_3DSComponents:FaceButtons x:Name="FaceButtonsControl"
                                        Width="200" Height="200"
                                        HorizontalAlignment="Right" VerticalAlignment="Center"
                                        Grid.Column="1"
                                        Margin="0,0,50,50" />

            <_3DSComponents:UtilityButtons x:Name="UtilButtonsControl"
                                           Width="200" Height="50"
                                           HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                           Grid.Column="1"
                                           Margin="0,0,50,0" />
        </Grid>
    </Grid>
</UserControl>

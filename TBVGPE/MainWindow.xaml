<Window x:Class="TBVGPE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TBVGPE"
        xmlns:views="clr-namespace:TBVGPE.Views.Presets._3DS"
        xmlns:threeDSViewModel="clr-namespace:TBVGPE.ViewModels.Controllers._3DS"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStartupLocation="Manual"
        Left="0" Top="0"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Focusable="False">

    <Window.Resources>
        <DataTemplate DataType="{x:Type threeDSViewModel:_3DSControllerViewModel}">
            <views:_3DSControllerLayout />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" /> <!-- para ma fill an rest na diri gagamit ngan ma anchor ha ubos an utility ngan controller -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="450"/> <!-- 450 an height han controller container, para diri umobos hinduro an utility kun ka hide an controller -->
        </Grid.RowDefinitions>

        <StackPanel x:Name="UtilityButtons" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Grid.Row="1">
            <Button 
            Name="CloseApplicationBtn"
            Content="Close Application" 
            Command="{Binding CloseApplicationCommand}"
            Width="120" Height="35"
            FontSize="14" FontWeight="Bold"
            Foreground="White" Background="#AAA"
            Margin="10,0,0,0"
            Visibility="{Binding CloseAppToggleControllerBtnVisibility}"/>

            <Button 
            Name="ToggleControllerBtn"
            Content="{Binding ToggleControllerText}" 
            Command="{Binding ToggleControllerCommand}"
            Width="120" Height="35"
            FontSize="14" FontWeight="Bold"
            Foreground="White" Background="#AAA"
            Margin="10,0,0,0"
            Visibility="{Binding CloseAppToggleControllerBtnVisibility}"/>

            <Button 
            Name="toggleMenuBtn"
            Content="{Binding ToggleMenuText}" 
            Command="{Binding ToggleMenuCommand}"
            Width="120" Height="35"
            FontSize="14" FontWeight="Bold"
            Foreground="White" Background="#AAA"
            Margin="10,0,0,0"/>
        </StackPanel>

        <ContentControl Grid.Row="2"
                    Content="{Binding CurrentControllerViewModel}"
                    Height="450"
                    VerticalAlignment="Bottom" 
                    Margin="0,0,0,100"
                    Visibility="{Binding ControllerVisibility}"/>
    </Grid>
</Window>

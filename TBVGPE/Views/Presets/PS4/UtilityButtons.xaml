<UserControl x:Class="TBVGPE.Views.Presets.PS4.UtilityButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets.PS4"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Canvas Name="PadCanvas">
        <!-- Anti click through -->
        <Rectangle Width="180" Height="30" Margin="10" Fill="#999" Opacity="0.1" />
        
        <!-- TODO: Put in stack panel -->
        <Button x:Name="OptionsBtn"
                Tag="Options"
                Width="50" Height="30"
                Content="OPTIONS"
                FontSize="10" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Canvas.Left="130"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="ShareBtn"
                Tag="Share"
                Width="50" Height="30"
                Content="SHARE"
                FontSize="10" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="PsBtn"
                Tag="Ps"
                Width="50" Height="30"
                Content="PS"
                FontSize="15" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Canvas.Left="65"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>
    </Canvas>
</UserControl>

<Window x:Class="TBVGPE.Views.MenuBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TBVGPE.Views"
        mc:Ignorable="d"
        Title="MenuBar" Height="40"
        WindowStartupLocation="Manual"
        Left="0" Top="0"
        Visibility="{Binding VisibilityState}"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True">
    <Grid>
        <ComboBox 
            ItemsSource="{Binding VirtualGamePadsCollection}" 
            DisplayMemberPath="Name" 
            SelectedValuePath="Id" 
            SelectedItem="{Binding SelectedVirtualGamePad, Mode=TwoWay}" 
            Margin="10" />
    </Grid>
</Window>

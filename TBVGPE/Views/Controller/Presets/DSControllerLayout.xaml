<UserControl x:Class="TBVGPE.Views.Controller.Presets.DSControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Presets"
             xmlns:viewModel="clr-namespace:TBVGPE.ViewModels.Controllers"
             xmlns:DirectionalButtons="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             xmlns:FaceButtons="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             xmlns:ShoulderButtons="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             xmlns:UtilityButtons="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Canvas x:Name="LayoutCanvas" Width="{Binding LayoutCanvasWidth}" Height="500">
        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding ShoulderButtonsX}" Canvas.Top="{Binding ShoulderButtonsY}">
            <ShoulderButtons:StandardShoulderButtons x:Name="StandardShoulderButtonsControl"
                                                     Height="70" />
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding DirectionalButtonsX}" Canvas.Top="{Binding DirectionalButtonsY}">
            <DirectionalButtons:StandardDirectionalButtons x:Name="StandardDirectionalButtonsControl"
                                                           Width="180" Height="180" />
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding FaceButtonsX}" Canvas.Top="{Binding FaceButtonsY}">
            <FaceButtons:NintendoNewFaceButtons x:Name="NintendoNewFaceButtonsControl"
                                                Width="200" Height="200" />
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding UtilityButtonsX}" Canvas.Top="{Binding UtilityButtonsY}">
            <UtilityButtons:DSUtilityButtons x:Name="DSUtilityButtonsControl"
                                             Width="70" Height="100" />
        </viewModel:ControllerWrapperViewModel>
    </Canvas>
</UserControl>

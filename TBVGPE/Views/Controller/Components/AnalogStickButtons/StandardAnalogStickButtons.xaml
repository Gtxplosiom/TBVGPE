<UserControl x:Class="TBVGPE.Views.Controller.Components.AnalogStickButtons.StandardAnalogStickButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Components.AnalogStickButtons"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="500">
    <Grid>
        <!-- TODO: Integrate stack panels -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Rectangle x:Name="LStickBtn"
                   Tag="LeftStick"
                   Width="100" Height="50"
                   Fill="#AAA"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   Margin="10"/>
        <Label Content="&gt;LS&lt;"
               Width="60" Height="30"
               Grid.Column="0"
               Margin="30,0,0,0"
               HorizontalAlignment="Left"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="15" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>

        <Rectangle x:Name="RStickBtn"
                   Tag="RightStick"
                   Width="100" Height="50"
                   Fill="#AAA"
                   Grid.Column="1"
                   HorizontalAlignment="Right" VerticalAlignment="Top" 
                   Margin="10"/>
        <Label Content="&gt;RS&lt;"
               Width="60" Height="30"
               Grid.Column="1"
               Margin="0,0,30,0"
               HorizontalAlignment="Right"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="15" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>
    </Grid>
</UserControl>

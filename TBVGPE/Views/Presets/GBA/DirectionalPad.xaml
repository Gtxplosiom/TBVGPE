<UserControl x:Class="TBVGPE.Views.Presets.GBA.DirectionalPad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets.GBA"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="180">

    <Canvas Name="PadCanvas">
        <Button x:Name="UpBtn"
                Tag="Up"
                Width="60" Height="60"
                Background="#AAA"
                BorderThickness="0"
                Canvas.Left="60"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"/>

        <Button x:Name="LeftBtn"
                Tag="Left"
                Width="60" Height="60"
                Background="#AAA"
                BorderThickness="0"
                Canvas.Top="60"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"/>

        <Button x:Name="DownBtn"
                Tag="Down"
                Width="60" Height="60"
                Background="#AAA"
                BorderThickness="0"
                Canvas.Left="60" Canvas.Top="120"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"/>

        <Button x:Name="RightBtn"
                Tag="Right"
                Width="60" Height="60"
                Background="#AAA"
                BorderThickness="0"
                Canvas.Left="120" Canvas.Top="60"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"/>

        <!-- Fillers -->
        <Rectangle Width="60" Height="60"
                   Fill="#AAA"
                   Canvas.Left="60" Canvas.Top="60"
                   IsHitTestVisible="False"/>

        <Rectangle Width="60" Height="60"
                   Fill="#333"
                   Opacity="0.3"
                   Canvas.Left="0" Canvas.Top="0"
                   IsHitTestVisible="False"/>

        <Rectangle Width="60" Height="60"
                   Fill="#333"
                   Opacity="0.3"
                   Canvas.Left="120" Canvas.Top="0"
                   IsHitTestVisible="False"/>

        <Rectangle Width="60" Height="60"
                   Fill="#333"
                   Opacity="0.3"
                   Canvas.Left="0" Canvas.Top="120"
                   IsHitTestVisible="False"/>

        <Rectangle Width="60" Height="60"
                   Fill="#333"
                   Opacity="0.3"
                   Canvas.Left="120" Canvas.Top="120"
                   IsHitTestVisible="False"/>
    </Canvas>
</UserControl>

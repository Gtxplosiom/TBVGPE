<UserControl x:Class="TBVGPE.Views.Presets._3DS.UtilityButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets._3DS"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Canvas Name="PadCanvas">
        <!-- Anti click through -->
        <Rectangle Width="180" Height="30" Margin="10" Fill="#999" Opacity="0.1" />

        <!-- TODO: Put in stack panel -->
        <Button x:Name="StartBtn"
                Tag="Start"
                Width="50" Height="30"
                Content="START"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Canvas.Left="130"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="SelectBtn"
                Tag="Select"
                Width="50" Height="30"
                Content="SELECT"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="HomeBtn"
                Tag="Home"
                Width="50" Height="30"
                Content="HOME"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Canvas.Left="65"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>
    </Canvas>
</UserControl>

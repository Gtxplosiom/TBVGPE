<UserControl x:Class="TBVGPE.Views.Presets.Switch.UtilityButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets.Switch"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250">
    <Canvas Name="PadCanvas">
        <!-- TODO: Put in stack panel -->
        <Button x:Name="StartBtn"
                Tag="RETURN"
                Width="50" Height="30"
                Content="+"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Canvas.Left="180"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="SelectBtn"
                Tag="SPACE"
                Width="50" Height="30"
                Content="-"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="HomeBtn"
                Tag="HOME"
                Width="50" Height="30"
                Content="HOME"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Canvas.Left="120"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="CaptureBtn"
                Tag="SNAPSHOT"
                Width="50" Height="30"
                Content="CAP"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Canvas.Left="60"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>
    </Canvas>
</UserControl>

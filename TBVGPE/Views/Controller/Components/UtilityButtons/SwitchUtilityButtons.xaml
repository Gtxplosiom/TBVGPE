<UserControl x:Class="TBVGPE.Views.Controller.Components.UtilityButtons.SwitchUtilityButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250">
    <Canvas Name="PadCanvas">
        <!-- Anti click through -->
        <Rectangle Width="230" Height="30" Margin="10" Fill="#999" Opacity="0.1" />
        
        <!-- TODO: Put in stack panel -->
        <Button x:Name="PlusBtn"
                Tag="Plus"
                Width="50" Height="30"
                Content="+"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Canvas.Left="180"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="MinusBtn"
                Tag="Minus"
                Width="50" Height="30"
                Content="-"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="HomeBtn"
                Tag="Home"
                Width="50" Height="30"
                Content="HOME"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Canvas.Left="120"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="CaptureBtn"
                Tag="waray pa"
                Width="50" Height="30"
                Content="CAP"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Canvas.Left="60"
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>
    </Canvas>
</UserControl>

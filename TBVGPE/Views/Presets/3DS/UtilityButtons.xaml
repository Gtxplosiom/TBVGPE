<UserControl x:Class="TBVGPE.Views.Presets._3DS.UtilityButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets._3DS"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Canvas Name="PadCanvas">
        <Button x:Name="StartBtn"
                Width="50" Height="30"
                Content="START"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Canvas.Left="130"
                Margin="10"
                PreviewMouseDown="StartBtn_PreviewMouseDown"
                PreviewMouseUp="StartBtn_PreviewMouseUp"
                MouseLeave="StartBtn_MouseLeave"/>

        <Button x:Name="SelectBtn"
                Width="50" Height="30"
                Content="SELECT"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Margin="10"
                PreviewMouseDown="SelectBtn_PreviewMouseDown"
                PreviewMouseUp="SelectBtn_PreviewMouseUp"
                MouseLeave="SelectBtn_MouseLeave"/>

        <Button x:Name="HomeBtn"
                Width="50" Height="30"
                Content="HOME"
                FontSize="11" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Canvas.Left="65"
                Margin="10"
                PreviewMouseDown="HomeBtn_PreviewMouseDown"
                PreviewMouseUp="HomeBtn_PreviewMouseUp"
                MouseLeave="HomeBtn_MouseLeave"/>
    </Canvas>
</UserControl>

<UserControl x:Class="TBVGPE.Views.Presets.GBAControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets"
             xmlns:DirectionalButtons="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             xmlns:FaceButtons="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             xmlns:ShoulderButtons="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             xmlns:UtilityButtons="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="88*"/>
        </Grid.RowDefinitions>

        <ShoulderButtons:StandardShoulderButtons x:Name="StandardShoulderButtonsControl"
                                      Height="50"
                                      HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DirectionalButtons:StandardDirectionalButtons x:Name="StandardDirectionalButtonsControl"
                                          Width="180" Height="180"
                                          HorizontalAlignment="Left" VerticalAlignment="Center"
                                          Grid.Column="0"
                                          Margin="50,0,0,170" />

            <UtilityButtons:GBAUtilityButtons x:Name="GBAUtilityButtonsControl"
                                          Width="70" Height="100"
                                          HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                          Grid.Column="0"
                                          Margin="115,0,0,70" />

            <FaceButtons:GBAFaceButtons x:Name="GBAFaceButtonsControl"
                                       Width="135" Height="135"
                                       HorizontalAlignment="Right" VerticalAlignment="Center"
                                       Grid.Column="1"
                                       Margin="0,0,50,100" />
        </Grid>
    </Grid>
</UserControl>

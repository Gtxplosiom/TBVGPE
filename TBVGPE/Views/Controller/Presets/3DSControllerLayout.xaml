<UserControl x:Class="TBVGPE.Views.Presets._3DSControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:AnalogSticks="clr-namespace:TBVGPE.Views.Controller.Components.AnalogSticks"
             xmlns:DirectionalButtons="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             xmlns:FaceButtons="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             xmlns:ShoulderButtons="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             xmlns:StickButtons="clr-namespace:TBVGPE.Views.Controller.Components.StickButtons"
             xmlns:UtilityButtons="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <!-- refer ha margins para dynamic positions han each controls -->
        <ShoulderButtons:NintendoShoulderButtons x:Name="NintendoShoulderButtonsControl"
                                        Height="90"
                                        HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DirectionalButtons:StandardDirectionalButtons x:Name="StandardDirectionalButtonsControl"
                                           Width="150" Height="150"
                                           HorizontalAlignment="Left" VerticalAlignment="Center"
                                           Grid.Column="0"
                                           Margin="45,200,0,10" />

            <AnalogSticks:LeftAnalogStick x:Name="LeftAnalogStickControl"
                                      Width="180" Height="180"
                                      HorizontalAlignment="Left" VerticalAlignment="Center"
                                      Grid.Column="0"
                                      Margin="30,0,0,160" />

            <FaceButtons:NintendoNewFaceButtons x:Name="NintendoNewFaceButtonsControl"
                                        Width="200" Height="200"
                                        HorizontalAlignment="Right" VerticalAlignment="Center"
                                        Grid.Column="1"
                                        Margin="0,0,30,50" />

            <UtilityButtons:_3DSUtilityButtons x:Name="_3DSUtilityButtonsControl"
                                           Width="200" Height="50"
                                           HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                           Grid.Column="1"
                                           Margin="0,0,30,0" />
        </Grid>
    </Grid>
</UserControl>

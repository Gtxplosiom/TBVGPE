<UserControl x:Class="TBVGPE.Views.Presets._3DSControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:AnalogSticks="clr-namespace:TBVGPE.Views.Controller.Components.AnalogSticks"
             xmlns:DirectionalButtons="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             xmlns:FaceButtons="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             xmlns:ShoulderButtons="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             xmlns:UtilityButtons="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- refer ha margins para dynamic positions han each controls -->
        <ShoulderButtons:NintendoShoulderButtons x:Name="NintendoShoulderButtonsControl"
                                        Height="Auto"
                                        HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <DirectionalButtons:StandardDirectionalButtons x:Name="StandardDirectionalButtonsControl"
                               Width="180" Height="180"
                               HorizontalAlignment="Left" VerticalAlignment="Bottom"
                               Grid.Row="1"
                               Margin="45,10,10,10" />

                <AnalogSticks:LeftAnalogStick x:Name="LeftAnalogStickControl"
                          Width="180" Height="180"
                          HorizontalAlignment="Left" VerticalAlignment="Top"
                          Grid.Row="0"
                          Margin="45,30,30,30" />
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <FaceButtons:NintendoNewFaceButtons x:Name="NintendoNewFaceButtonsControl"
                            Width="200" Height="200"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Grid.Row="0"
                            Margin="50" />

                <UtilityButtons:_3DSUtilityButtons x:Name="_3DSUtilityButtonsControl"
                               Width="200" Height="50"
                               HorizontalAlignment="Right" VerticalAlignment="Bottom"
                               Grid.Row="1"
                               Margin="50" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>

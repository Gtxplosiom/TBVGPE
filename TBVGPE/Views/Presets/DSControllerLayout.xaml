<UserControl x:Class="TBVGPE.Views.Presets.DSControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets"
             xmlns:DSComponents="clr-namespace:TBVGPE.Views.Presets.DS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="88*"/>
        </Grid.RowDefinitions>

        <DSComponents:ShoulderButtons x:Name="ShoulderButtonsControl"
                                      Height="50"
                                      HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DSComponents:DirectionalPad x:Name="DirectionalPadControl"
                                         Width="180" Height="180"
                                         HorizontalAlignment="Left" VerticalAlignment="Center"
                                         Grid.Column="0"
                                         Margin="50,0,0,120" />

            <DSComponents:FaceButtons x:Name="FaceButtonsControl"
                                      Width="200" Height="200"
                                      HorizontalAlignment="Right" VerticalAlignment="Center"
                                      Grid.Column="1"
                                      Margin="0,0,30,120" />

            <DSComponents:UtilityButtons x:Name="UtilButtonsControl"
                                         Width="70" Height="100"
                                         HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                         Grid.Column="1"
                                         Margin="0,0,95,30" />
        </Grid>
    </Grid>
</UserControl>

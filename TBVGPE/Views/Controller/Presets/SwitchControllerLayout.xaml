<UserControl x:Class="TBVGPE.Views.Presets.SwitchControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:AnalogSticks="clr-namespace:TBVGPE.Views.Controller.Components.AnalogSticks"
             xmlns:DirectionalButtons="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             xmlns:FaceButtons="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             xmlns:ShoulderButtons="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             xmlns:StickButtons="clr-namespace:TBVGPE.Views.Controller.Components.StickButtons"
             xmlns:UtilityButtons="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ShoulderButtons:NintendoShoulderButtons x:Name="NintendoShoulderButtonsControl"
                                          HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Grid Grid.Row="1">
            <StickButtons:StandardStickButtons x:Name="StandardStickButtonsControl"
                                           HorizontalAlignment="Center" VerticalAlignment="Top" />
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DirectionalButtons:SwitchDirectionalButtons x:Name="SwitchDirectionalButtonsControl"
                                                 Width="150" Height="150"
                                                 HorizontalAlignment="Left" VerticalAlignment="Center"
                                                 Grid.Column="0"
                                                 Margin="120,200,0,20" />

            <AnalogSticks:LeftAnalogStick x:Name="LeftAnalogStickControl"
                                        Width="180" Height="180"
                                        HorizontalAlignment="Left" VerticalAlignment="Center"
                                        Grid.Column="0"
                                        Margin="50,0,0,180" />

            <FaceButtons:NintendoNewFaceButtons x:Name="NintendoNewFaceButtonsControl"
                                          Width="200" Height="200"
                                          HorizontalAlignment="Right" VerticalAlignment="Center"
                                          Grid.Column="1"
                                          Margin="0,0,10,130" />

            <UtilityButtons:SwitchUtilityButtons x:Name="SwitchUtilityButtonsControl"
                                             Width="200" Height="50"
                                             HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                             Grid.Column="1"
                                             Margin="0,0,55,0" />

            <AnalogSticks:RightAnalogStick x:Name="RightAnalogStickControl"
                                         Width="180" Height="180"
                                         HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                         Grid.Column="1"
                                         Margin="0,0,180,45" />
        </Grid>
    </Grid>
</UserControl>

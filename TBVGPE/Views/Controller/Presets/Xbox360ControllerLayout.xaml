<UserControl x:Class="TBVGPE.Views.Presets.Xbox360ControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets"
             xmlns:AnalogSticks="clr-namespace:TBVGPE.Views.Controller.Components.AnalogSticks"
             xmlns:DirectionalButtons="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             xmlns:FaceButtons="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             xmlns:ShoulderButtons="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             xmlns:StickButtons="clr-namespace:TBVGPE.Views.Controller.Components.StickButtons"
             xmlns:UtilityButtons="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ShoulderButtons:XboxShoulderButtons x:Name="XboxShoulderButtonsControl"
                       HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Grid Grid.Row="1">
            <StickButtons:StandardStickButtons x:Name="StandardStickButtonsControl"
               HorizontalAlignment="Center" VerticalAlignment="Top" />
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DirectionalButtons:StandardDirectionalButtons x:Name="StandardDirectionalButtonsControl"
                                              Width="150" Height="150"
                                              HorizontalAlignment="Left" VerticalAlignment="Center"
                                              Grid.Column="0"
                                              Margin="120,200,0,10" />

            <AnalogSticks:LeftAnalogStick x:Name="LeftAnalogStickControl"
                             Width="180" Height="180"
                             HorizontalAlignment="Left" VerticalAlignment="Center"
                             Grid.Column="0"
                             Margin="50,0,0,180" />

            <FaceButtons:XboxFaceButtons x:Name="XboxFaceButtonsControl"
                                           Width="200" Height="200"
                                           HorizontalAlignment="Right" VerticalAlignment="Center"
                                           Grid.Column="1"
                                           Margin="0,0,10,130" />

            <UtilityButtons:Xbox360UtilityButtons x:Name="Xbox360UtilityButtonsControl"
                                              Width="200" Height="50"
                                              HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                              Grid.Column="1"
                                              Margin="0,0,10,0" />

            <AnalogSticks:RightAnalogStick x:Name="RightAnalogStickControl"
                                          Width="180" Height="180"
                                          HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                          Grid.Column="1"
                                          Margin="0,0,180,40" />
        </Grid>
    </Grid>
</UserControl>

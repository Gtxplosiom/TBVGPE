<UserControl x:Class="TBVGPE.Views.Presets.PS4ControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets"
             xmlns:viewModel="clr-namespace:TBVGPE.ViewModels.Controllers"
             xmlns:AnalogSticks="clr-namespace:TBVGPE.Views.Controller.Components.AnalogSticks"
             xmlns:DirectionalButtons="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             xmlns:FaceButtons="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             xmlns:ShoulderButtons="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             xmlns:AnalogStickButtons="clr-namespace:TBVGPE.Views.Controller.Components.AnalogStickButtons"
             xmlns:UtilityButtons="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Canvas x:Name="LayoutCanvas" Width="{Binding LayoutCanvasWidth}" Height="600">
        <!-- Be sure to take into account the codebehinds loaded event whe setting the shoulder and analig stick buttons' dimentions(widths, heights) or positions -->
        <!-- if you want to migrate the logiv here -->
        <!-- TODO: consider dividing each shoulder buttons individually nala kaysa an naka grupo na ngadaan pareho adi yana -->
        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding PlayStationShoulderButtonsLeft}" Canvas.Top="{Binding PlayStationShoulderButtonsTop}">
            <ShoulderButtons:PlayStationShoulderButtons x:Name="PlayStationShoulderButtonsControl"
                                                        Height="120" 
                                                        HorizontalAlignment="Center" VerticalAlignment="Top" />
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding StandardAnalogStickButtonsLeft}" Canvas.Top="{Binding StandardAnalogStickButtonsTop}">
            <AnalogStickButtons:StandardAnalogStickButtons x:Name="StandardAnalogStickButtonsControl"
                                                           Height="70"
                                                           HorizontalAlignment="Center" VerticalAlignment="Top" />
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding StandardDirectionalButtonsLeft}" Canvas.Top="{Binding StandardDirectionalButtonsTop}">
            <DirectionalButtons:StandardDirectionalButtons Width="180" Height="180"/>
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding LeftAnalogStickLeft}" Canvas.Top="{Binding LeftAnalogStickTop}">
            <AnalogSticks:LeftAnalogStick Width="180" Height="180"/>
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding PlayStationFaceButtonsLeft}" Canvas.Top="{Binding PlayStationFaceButtonsTop}">
            <FaceButtons:PlayStationFaceButtons x:Name="PlayStationFaceButtonsControl"
                                                    Width="200" Height="200"/>
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding PS4UtilityButtonsLeft}" Canvas.Top="{Binding PS4UtilityButtonsTop}">
            <UtilityButtons:PS4UtilityButtons x:Name="PS4UtilityButtonsControl"
                                                    Width="200" Height="50"/>
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel Canvas.Left="{Binding RightAnalogStickLeft}" Canvas.Top="{Binding RightAnalogStickTop}">
            <AnalogSticks:RightAnalogStick x:Name="RightAnalogStickControl"
                                                   Width="180" Height="180"/>
        </viewModel:ControllerWrapperViewModel>
    </Canvas>
</UserControl>

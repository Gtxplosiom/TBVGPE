<UserControl x:Class="TBVGPE.Views.Presets.PS4.FaceButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets.PS4"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Canvas Name="PadCanvas">
        <Ellipse x:Name="TriangleBtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Left="65" />
        <Label Content="△"
               Width="70" Height="70"
               Canvas.Left="65"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="40"
               Foreground="Cyan"
               Background="Transparent"
               IsHitTestVisible="False" HorizontalAlignment="Center" Canvas.Top="-5" VerticalAlignment="Top"/>

        <Ellipse x:Name="SquareBtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Top="65" />
        <Label Content="□"
               Width="70" Height="85"
               Canvas.Top="48"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="55"
               Foreground="Pink"
               Background="Transparent"
               IsHitTestVisible="False" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Ellipse x:Name="XBtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Left="65" Canvas.Top="130" />
        <Label Content="X"
               Width="70" Height="70"
               Canvas.Left="65" Canvas.Top="130"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="40"
               Foreground="DodgerBlue"
               Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="CircleBtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Left="130" Canvas.Top="65" />
        <Label Content="○"
               Width="70" Height="70"
               Canvas.Left="130" Canvas.Top="63"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="40"
               Foreground="Red"
               Background="Transparent"
               IsHitTestVisible="False" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Canvas>
</UserControl>

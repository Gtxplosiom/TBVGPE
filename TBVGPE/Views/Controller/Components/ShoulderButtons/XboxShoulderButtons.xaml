<UserControl x:Class="TBVGPE.Views.Controller.Components.ShoulderButtons.XboxShoulderButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="800">
    <Grid>
        <!-- TODO: Integrate stack panels -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Anti click through -->
        <Rectangle Width="120" Height="120" HorizontalAlignment="Left" Fill="#01000000" Grid.Column="0" />
        <Rectangle Width="120" Height="120" HorizontalAlignment="Right" Fill="#01000000" Grid.Column="1" />

        <Rectangle x:Name="LBBtn"
                   Tag="LB"
                   Width="100" Height="45"
                   Fill="#AAA"
                   Grid.Column="0"
                   HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="10"/>
        <Label Content="LB"
               Width="100" Height="45"
               Grid.Column="0"
               Margin="10"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="15" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>

        <Rectangle x:Name="LTBtn"
                   Tag="LT"
                   Width="100" Height="45"
                   Fill="#AAA"
                   Grid.Column="0"
                   HorizontalAlignment="Left" VerticalAlignment="Bottom"
                   Margin="10"/>
        <Label Content="LT"
               Width="100" Height="45"
               Grid.Column="0"
               Margin="10"
               HorizontalAlignment="Left" VerticalAlignment="Bottom"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="15" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>

        <Rectangle x:Name="RBBtn"
                   Tag="RB"
                   Width="100" Height="45"
                   Fill="#AAA"
                   Grid.Column="1"
                   HorizontalAlignment="Right" VerticalAlignment="Top" 
                   Margin="10"/>
        <Label Content="RB"
               Width="100" Height="45"
               Grid.Column="1"
               Margin="10"
               HorizontalAlignment="Right" VerticalAlignment="Top"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="15" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>

        <Rectangle x:Name="RTBtn"
                   Tag="RT"
                   Width="100" Height="45"
                   Fill="#AAA"
                   Grid.Column="1"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Margin="10"/>
        <Label Content="RT"
               Width="100" Height="45"
               Grid.Column="1"
               Margin="10"
               HorizontalAlignment="Right" VerticalAlignment="Bottom"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="15" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>
    </Grid>
</UserControl>

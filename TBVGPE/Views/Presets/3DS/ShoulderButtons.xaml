<UserControl x:Class="TBVGPE.Views.Presets._3DS.ShoulderButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets._3DS"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="LBtn"
                Width="100" Height="30"
                Content="L"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Grid.Column="0"
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10"
                PreviewMouseDown="LBtn_PreviewMouseDown"
                PreviewMouseUp="LBtn_PreviewMouseUp"
                MouseLeave="LBtn_MouseLeave"/>

        <Button x:Name="ZLBtn"
                Width="70" Height="30"
                Content="ZL"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Grid.Column="0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10,50,0,0"
                PreviewMouseDown="ZLBtn_PreviewMouseDown"
                PreviewMouseUp="ZLBtn_PreviewMouseUp"
                MouseLeave="ZLBtn_MouseLeave"/>

        <Button x:Name="RBtn"
                Width="100" Height="30"
                Content="R"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Grid.Column="1"
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="10"
                PreviewMouseDown="RBtn_PreviewMouseDown"
                PreviewMouseUp="RBtn_PreviewMouseUp"
                MouseLeave="RBtn_MouseLeave"/>

        <Button x:Name="ZRBtn"
                Width="70" Height="30"
                Content="ZR"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                Grid.Column="1"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,50,10,0"
                PreviewMouseDown="ZRBtn_PreviewMouseDown"
                PreviewMouseUp="ZRBtn_PreviewMouseUp"
                MouseLeave="ZRBtn_MouseLeave"/>
    </Grid>
</UserControl>

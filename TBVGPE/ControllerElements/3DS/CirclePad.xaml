<UserControl x:Class="TBVGPE.ControllerElements._3DS.CirclePad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.ControllerElements._3DS"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200"
             Background="Transparent">
    <!-- The key change is adding the SizeChanged event handler HERE -->
    <Canvas x:Name="PadCanvas" SizeChanged="PadCanvas_SizeChanged">
        <Ellipse Width="150" Height="150" Fill="#333" Opacity="0.5"
                 Canvas.Left="25" Canvas.Top="25"/>

        <Ellipse x:Name="Thumb" Width="120" Height="120" Fill="#AAA"
                 Canvas.Left="41" Canvas.Top="41"
                 MouseDown="Thumb_MouseDown"
                 MouseMove="Thumb_MouseMove"
                 MouseUp="Thumb_MouseUp"/>
    </Canvas>
</UserControl>

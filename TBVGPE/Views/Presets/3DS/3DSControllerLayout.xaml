<UserControl x:Class="TBVGPE.Views.Presets._3DS._3DSControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets._3DS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- refer ha margins para dynamic positions han each controls -->
        <local:CirclePad x:Name="CirclePadControl"
                 Width="150" Height="150"                 HorizontalAlignment="Left" VerticalAlignment="Center"
                 Grid.Column="0"
                 Margin="10,0,0,200" />

        <local:FaceButtons x:Name="FaceButtonsControl"
                   Width="200" Height="200"
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   Grid.Column="1"
                   Margin="10" />
    </Grid>
</UserControl>

<UserControl x:Class="TBVGPE.Views.Controller.Components.UtilityButtons.GBAUtilityButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="70">
    <Canvas Name="PadCanvas">
        <!-- Anti click through -->
        <Rectangle Width="70" Height="130" Fill="#01000000" />

        <!-- TODO: Put in stack panel -->
        <Ellipse x:Name="StartBtn"
                 Width="50" Height="50"
                 Canvas.Left="10" Canvas.Top="5"
                 Fill="#333"
                 Opacity="0.5" />
        <Label Content="Start"
               Width="50" Height="50"
               Canvas.Left="10" Canvas.Top="5"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="11" FontWeight="Bold"
               Foreground="White"
               Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="SelectBtn"
                 Width="50" Height="50"
                 Fill="#333"
                 Opacity="0.5"
                 Canvas.Left="10" Canvas.Top="75" />
        <Label Content="Select"
               Width="50" Height="50"
               Canvas.Left="10" Canvas.Top="75"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="11" FontWeight="Bold"
               Foreground="White"
               Background="Transparent"
               IsHitTestVisible="False"/>
    </Canvas>
</UserControl>

<UserControl x:Class="TBVGPE.Views.Presets.Xbox360.FaceButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets.Xbox360"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Canvas Name="PadCanvas">
        <Ellipse x:Name="YBtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Left="65" />
        <Label Content="Y"
               Width="70" Height="70"
               Canvas.Left="65"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="24" FontWeight="Bold"
               Foreground="Yellow"
               Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="XBtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Top="65" />
        <Label Content="X"
               Width="70" Height="70"
               Canvas.Top="65"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="24" FontWeight="Bold"
               Foreground="Blue"
               Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="ABtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Left="65" Canvas.Top="130" />
        <Label Content="A"
               Width="70" Height="70"
               Canvas.Left="65" Canvas.Top="130"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="24" FontWeight="Bold"
               Foreground="Green"
               Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="BBtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Left="130" Canvas.Top="65" />
        <Label Content="B"
               Width="70" Height="70"
               Canvas.Left="130" Canvas.Top="65"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="24" FontWeight="Bold"
               Foreground="Red"
               Background="Transparent"
               IsHitTestVisible="False"/>
    </Canvas>
</UserControl>

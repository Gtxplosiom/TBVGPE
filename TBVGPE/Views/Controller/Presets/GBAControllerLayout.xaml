<UserControl x:Class="TBVGPE.Views.Controller.Presets.GBAControllerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Presets"
             xmlns:viewModel="clr-namespace:TBVGPE.ViewModels.Controllers"
             xmlns:DirectionalButtons="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             xmlns:FaceButtons="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             xmlns:ShoulderButtons="clr-namespace:TBVGPE.Views.Controller.Components.ShoulderButtons"
             xmlns:UtilityButtons="clr-namespace:TBVGPE.Views.Controller.Components.UtilityButtons"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Canvas x:Name="LayoutCanvas" Width="{Binding LayoutCanvasWidth}" Height="500">
        <viewModel:ControllerWrapperViewModel DataContext="{Binding ShoulderButtons}"
                                              Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}">
            <ShoulderButtons:StandardShoulderButtons x:Name="StandardShoulderButtonsControl"
                                                     Height="{Binding DataContext.ShoulderButtonsHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel DataContext="{Binding DirectionalButtons}"
                                              Canvas.Left="{Binding X}"
                                              Canvas.Top="{Binding Y}">
            <DirectionalButtons:StandardDirectionalButtons x:Name="StandardDirectionalButtonsControl"
                                                           Width="{Binding DataContext.DirectionalButtonsWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                                                           Height="{Binding DataContext.DirectionalButtonsHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel DataContext="{Binding FaceButtons}"
                                              Canvas.Left="{Binding X}"
                                              Canvas.Top="{Binding Y}">
            <FaceButtons:GBAFaceButtons x:Name="FaceButtonsControl"
                                        Width="{Binding DataContext.FaceButtonsWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                                        Height="{Binding DataContext.FaceButtonsHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
        </viewModel:ControllerWrapperViewModel>

        <viewModel:ControllerWrapperViewModel DataContext="{Binding UtilityButtons}"
                                              Canvas.Left="{Binding X}"
                                              Canvas.Top="{Binding Y}">
            <UtilityButtons:GBAUtilityButtons x:Name="UtilityButtonsControl"
                                              Width="{Binding DataContext.UtilityButtonsWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                                              Height="{Binding DataContext.UtilityButtonsHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
        </viewModel:ControllerWrapperViewModel>
    </Canvas>
</UserControl>

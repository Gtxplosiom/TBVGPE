<UserControl x:Class="TBVGPE.Views.Presets._3DS.ShoulderButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Presets._3DS"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="800">
    <Grid>
        <!-- TODO: Integrate stack panels -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Anti click through -->
        <Rectangle Width="100" Height="70" HorizontalAlignment="Left" Margin="10" Fill="#999" Opacity="0.1" Grid.Column="0" />
        <Rectangle Width="100" Height="70" HorizontalAlignment="Right" Margin="10" Fill="#999" Opacity="0.1" Grid.Column="1" />

        <Button x:Name="LBtn"
                Tag="LB"
                Width="100" Height="30"
                Content="L"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Grid.Column="0"
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="ZLBtn"
                Tag="LT"
                Width="100" Height="30"
                Content="ZL"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Grid.Column="0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10,50,0,0"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="RBtn"
                Tag="RB"
                Width="100" Height="30"
                Content="R"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Grid.Column="1"
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="10"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>

        <Button x:Name="ZRBtn"
                Tag="RT"
                Width="100" Height="30"
                Content="ZR"
                FontSize="20" FontWeight="Bold"
                Foreground="White" Background="#AAA"
                BorderThickness="0"
                Grid.Column="1"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,50,10,0"
                PreviewTouchDown="Button_PreviewTouchDown"
                PreviewTouchUp="Button_PreviewTouchUp"
                TouchLeave="Button_TouchLeave"
                TouchEnter="Button_TouchEnter"
                FocusVisualStyle="{x:Null}"/>
    </Grid>
</UserControl>

<UserControl x:Class="TBVGPE.Views.Controller.Components.DirectionalButtons.SwitchDirectionalButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Components.DirectionalButtons"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="180">
    <Canvas Name="PadCanvas">
        <!-- Anti click through -->
        <Rectangle Width="180" Height="180" Fill="#01000000" />
        
        <!-- Background Filler -->
        <Ellipse Width="180" Height="180"  Fill="#999" Opacity="0.1" />

        <!-- Diagonals -->
        <Ellipse x:Name="UpLeftBtn" Width="60" Height="60" Fill="Transparent" Opacity="0.1" Canvas.Left="20" Canvas.Top="20" />
        <Ellipse x:Name="DownLeftBtn" Width="60" Height="60" Fill="Transparent" Opacity="0.1" Canvas.Left="20" Canvas.Top="100" />
        <Ellipse x:Name="DownRightBtn" Width="60" Height="60" Fill="Transparent" Opacity="0.1" Canvas.Left="100" Canvas.Top="100" />
        <Ellipse x:Name="UpRightBtn" Width="60" Height="60" Fill="Transparent" Opacity="0.1" Canvas.Left="100" Canvas.Top="20" />

        <Ellipse x:Name="UpBtn" Width="60" Height="60" Fill="#333" Opacity="0.5" Canvas.Left="60" />
        <Label Content="▲"
               Width="60" Height="60"
               Canvas.Left="60"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="25" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="LeftBtn" Width="60" Height="60" Fill="#333" Opacity="0.5" Canvas.Top="60" />
        <Label Content="◄"
               Width="60" Height="60"
               Canvas.Top="60"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="35" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="DownBtn" Width="60" Height="60" Fill="#333" Opacity="0.5" Canvas.Left="60" Canvas.Top="120" />
        <Label Content="▼"
               Width="60" Height="60"
               Canvas.Left="60" Canvas.Top="120"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="25" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="RightBtn" Width="60" Height="60" Fill="#333" Opacity="0.5" Canvas.Left="120" Canvas.Top="60" />
        <Label Content="►"
               Width="60" Height="60"
               Canvas.Left="120" Canvas.Top="60"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="35" FontWeight="Bold"
               Foreground="White" Background="Transparent"
               IsHitTestVisible="False"/>
    </Canvas>
</UserControl>

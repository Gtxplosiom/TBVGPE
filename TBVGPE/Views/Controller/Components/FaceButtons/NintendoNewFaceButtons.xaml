<UserControl x:Class="TBVGPE.Views.Controller.Components.FaceButtons.NintendoNewFaceButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBVGPE.Views.Controller.Components.FaceButtons"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Canvas Name="PadCanvas">
        <!-- Anti click through -->
        <Rectangle Width="200" Height="200" Fill="#EEEE" Opacity="0.1" />
        
        <Ellipse x:Name="XBtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Left="65" />
        <Label Content="X"
               Width="70" Height="70"
               Canvas.Left="65"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="24" FontWeight="Bold"
               Foreground="Blue"
               Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="YBtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Top="65" />
        <Label Content="Y"
               Width="70" Height="70"
               Canvas.Top="65"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="24" FontWeight="Bold"
               Foreground="Green"
               Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="BBtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Left="65" Canvas.Top="130" />
        <Label Content="B"
               Width="70" Height="70"
               Canvas.Left="65" Canvas.Top="130"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="24" FontWeight="Bold"
               Foreground="Yellow"
               Background="Transparent"
               IsHitTestVisible="False"/>

        <Ellipse x:Name="ABtn" Width="70" Height="70" Fill="#333" Opacity="0.5" Canvas.Left="130" Canvas.Top="65" />
        <Label Content="A"
               Width="70" Height="70"
               Canvas.Left="130" Canvas.Top="65"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="24" FontWeight="Bold"
               Foreground="Red"
               Background="Transparent"
               IsHitTestVisible="False"/>

        <!-- Combinations -->
        <Ellipse x:Name="XPlusYBtn" Width="60" Height="60" Fill="#333" Opacity="0.0"/>
        <TextBlock x:Name="XPlusYTxt"
                   Width="60" Height="60"
                   Canvas.Left="5" Canvas.Top="15"
                   FontSize="20" FontWeight="Bold"
                   Background="Transparent"
                   Opacity="0.0"
                   IsHitTestVisible="False">
                   <Run Text="X" Foreground="Blue"/>
                   <Run Text="+" Foreground="Green"/>
                   <Run Text="Y" Foreground="Yellow"/>
        </TextBlock>

        <Ellipse x:Name="YPlusBBtn" Width="60" Height="60" Fill="#333" Opacity="0.0" Canvas.Top="140"/>
        <TextBlock x:Name="YPlusBTxt"
                   Width="60" Height="60"
                   Canvas.Left="5" Canvas.Top="155"
                   FontSize="20" FontWeight="Bold"
                   Background="Transparent"
                   Opacity="0.0"
                   IsHitTestVisible="False">
                   <Run Text="Y" Foreground="Green"/>
                   <Run Text="+" Foreground="YellowGreen"/>
                   <Run Text="B" Foreground="Yellow"/>
        </TextBlock>

        <Ellipse x:Name="BPlusABtn" Width="60" Height="60" Fill="#333" Opacity="0.0" Canvas.Left="140" Canvas.Top="140"/>
        <TextBlock x:Name="BPlusATxt"
                   Width="60" Height="60"
                   Canvas.Left="145" Canvas.Top="155"
                   FontSize="20" FontWeight="Bold"
                   Background="Transparent"
                   Opacity="0.0"
                   IsHitTestVisible="False">
                   <Run Text="B" Foreground="Yellow"/>
                   <Run Text="+" Foreground="Orange"/>
                   <Run Text="A" Foreground="Red"/>
        </TextBlock>

        <Ellipse x:Name="APlusXBtn" Width="60" Height="60" Fill="#333" Opacity="0.0" Canvas.Left="140"/>
        <TextBlock x:Name="APlusXTxt"
                   Width="60" Height="60"
                   Canvas.Left="145" Canvas.Top="15"
                   FontSize="20" FontWeight="Bold"
                   Background="Transparent"
                   Opacity="0.0"
                   IsHitTestVisible="False">
                   <Run Text="A" Foreground="Red"/>
                   <Run Text="+" Foreground="Purple"/>
                   <Run Text="X" Foreground="Blue"/>
        </TextBlock>
    </Canvas>
</UserControl>
